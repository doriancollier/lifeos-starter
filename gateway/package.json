{
  "name": "life-os-gateway",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsx watch src/server/index.ts\" \"vite\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "tsc -p tsconfig.server.json && vite build",
    "start": "NODE_ENV=production node dist-server/server/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:obsidian": "vite build --config vite.config.obsidian.ts",
    "dev:obsidian": "vite build --config vite.config.obsidian.ts --watch"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@tanstack/react-query": "^5.62.0",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-virtual": "^3.11.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "latest",
    "motion": "^12.33.0",
    "nuqs": "^2.8.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "streamdown": "latest",
    "tailwind-merge": "^3.4.0",
    "uuid": "^10.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "latest",
    "@vitest/coverage-v8": "^2.1.9",
    "concurrently": "^9.0.0",
    "jsdom": "^28.0.0",
    "supertest": "^7.2.2",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "obsidian": "latest"
  }
}
